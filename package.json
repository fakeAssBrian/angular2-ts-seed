{
  "scripts": {
    "postinstall": "typings i",

    "prebuild": "rimraf ./dist",
    "build": "NODE_ENV=production webpack --config tools/webpack/webpack.prod.babel.js",

    "lint:scss": "stylelint './src/**/*.scss' --syntax scss",
    "lint:ts": "tslint -t stylish 'src/**/*.ts'",

    "start": "npm run start:dev",
    "start:dev": "NODE_ENV=development webpack-dev-server --config tools/webpack/webpack.dev.babel.js --hot --inline",
    "start:prod": "http-server dist --cors",
    "start:mock-api": "nodemon --exec babel-node ./mock-api/server.js",

    "generate": "plop --plopfile tools/generators/index.babel.js"
  },
  "dependencies": {
    "@angular/common": "^2.0.0-rc.4",
